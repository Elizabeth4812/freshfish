<p style="color: green"><%= notice %></p>

<h1>Contactos</h1>

<%= paginate @contactos %>
<div id="contactos">
  <table class="table  table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
      <tr>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Asunto</th>
        <th>Mensaje</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
<tbody>

  <% @contactos.each do |contacto| %>
    <tr>
      <td><%= contacto.nombre %></td>
      <td><%= contacto.correo %></td>
      <td><%= contacto.asunto %></td>
      <td><%= contacto.mensaje %></td>
      <td><%= link_to "Ver", contacto %></td>
      <td><%= link_to "Editar", edit_contacto_path(contacto) %></td>
      <td><%= link_to "Eliminar", contacto, method: :delete, data:{confirm: '¿Está seguro de Eliminar?'} %></td>
    </tr>
    
  <% end %>
  </tbody>
  
  </table>
</div>
<%=paginate @contactos %>
<%= page_entries_info @contactos, entry_name: 'item' %>
<br>
<%= link_to "New contacto", new_contacto_path %>
